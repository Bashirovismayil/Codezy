<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.AddPostPage">


    <ImageView
        android:id="@+id/add_post_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:scaleType="fitStart"
        android:src="@drawable/add_post_action_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="10sp"
        android:src="@drawable/add_article_icon"
        app:layout_constraintBottom_toBottomOf="@+id/createYourArticle"
        app:layout_constraintEnd_toStartOf="@+id/createYourArticle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/createYourArticle" />


    <TextView
        android:id="@+id/createYourArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:alpha="0.9"
        android:text="@string/create_your_article"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/add_post_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="@+id/add_post_action_bar"
        app:layout_constraintTop_toTopOf="@+id/add_post_action_bar"
        app:layout_constraintVertical_bias="0.418" />

    <ImageView
        android:id="@+id/createTitleBanner"
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:alpha="0.6"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitStart"
        android:elevation="2dp"
        android:src="@drawable/create_title_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_post_action_bar" />

    <EditText
        android:id="@+id/AddPostTitle"
        android:layout_width="347dp"
        android:layout_height="85dp"
        android:backgroundTint="@android:color/transparent"
        android:hint="@string/create_a_title"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="@+id/createTitleBanner"
        app:layout_constraintEnd_toEndOf="@+id/createTitleBanner"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/createTitleBanner"
        app:layout_constraintTop_toTopOf="@+id/createTitleBanner"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="380dp"
        android:layout_height="570dp"
        android:alpha="0.6"
        android:layout_marginHorizontal="20dp"
        android:scaleType="fitStart"
        android:elevation="2dp"
        android:src="@drawable/create_article_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createTitleBanner"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/AddPostText"
        android:layout_width="346dp"
        android:layout_height="530dp"
        android:backgroundTint="@android:color/transparent"
        android:gravity="start|top"
        android:hint="@string/write_your_article"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/createTitleBanner"
        app:layout_constraintVertical_bias="0.22" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:alpha="0.8"
        android:backgroundTint="@color/white"
        android:text="@string/share"
        android:textColor="@color/codezy_light_green"
        android:textSize="11sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_post_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/createYourArticle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>